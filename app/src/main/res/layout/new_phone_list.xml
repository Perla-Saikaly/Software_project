<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/Newphone"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/NewPhoneName"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:fontFamily="casual"
            android:text="Phone name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NewPhoneStatus"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NewPhoneName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:fontFamily="casual"
            android:text="Status"
            android:textSize="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/NewPhoneprice"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NewPhoneName"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/NewPhoneStatus"
            android:fontFamily="casual"
            android:paddingLeft="20dp"
            android:text="Price"
            android:textSize="10dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/NewPhoneImage"
            android:layout_width="173dp"
            android:layout_height="205dp"
            android:layout_below="@id/NewPhoneStatus"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="35dp" />
        /*android:src="@drawable/logo" */


        <Button
            android:id="@+id/btnAddNew"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="0dp"
            android:text="Add" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>